<div class="container">

  <div class="page-header">
    <h2>Edit restaurant</h2>
  </div>


  <div class="row">
    <div class="form-group col-md-1"></div>
    <div class="form-group col-md-6">

      <%= form_tag "/restaurants", method: "post" do %>
        <p>
          <%= label_tag "Restaurant name" %>
          <%= text_field_tag "name", nil, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "City" %>
          <%= text_field_tag "city", nil, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "Address" %>
          <%= text_field_tag "address", nil, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "Cuisines" %>
          <%= text_field_tag "cuisines", nil, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "Dining_style" %>
          <%= text_field_tag "dining_style", nil, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "price_range" %>
          <%= text_field_tag "price_range", nil, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "phone_number" %>
          <%= text_field_tag "phone_number", nil, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "website" %>
          <%= text_field_tag "website", nil, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "photo_url" %>
          <%= text_field_tag "photo_url", nil, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "number_of_tables" %>
          <%= text_field_tag "number_of_tables", nil, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "description" %>
          <%= text_area_tag "description", nil, class: "form-control", rows: 10 %>
        </p>

        <br/>
        <p>
          <%= submit_tag "ADD", class: "btn btn-primary" %>
        </p>

        <% end %>
    </div>
  </div>
</div>
