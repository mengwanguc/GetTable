<div class="container">

  <div class="page-header">
    <h2>Edit restaurant</h2>
  </div>


  <div class="row">
    <div class="form-group col-md-1"></div>
    <div class="form-group col-md-6">

      <%= form_tag "/restaurants/#{@restaurant.id}", method: "patch" do %>
        <p>
          <%= label_tag "Restaurant name" %>
          <%= text_field_tag "name", @restaurant.name, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "City" %>
          <%= text_field_tag "city", @restaurant.city, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "Address" %>
          <%= text_field_tag "address", @restaurant.address, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "Cuisines" %>
          <%= text_field_tag "cuisines", @restaurant.cuisines, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "Dining_style" %>
          <%= text_field_tag "dining_style", @restaurant.dining_style, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "price_range" %>
          <%= text_field_tag "price_range", @restaurant.price_range, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "phone_number" %>
          <%= text_field_tag "phone_number", @restaurant.phone_number, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "website" %>
          <%= text_field_tag "website", @restaurant.website, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "photo_url" %>
          <%= text_field_tag "photo_url", @restaurant.photo_url, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "number_of_tables" %>
          <%= text_field_tag "number_of_tables", @restaurant.number_of_tables, class: "form-control" %>
        </p>

        <p>
          <%= label_tag "description" %>
          <%= text_area_tag "description", @restaurant.description, class: "form-control", rows: 10 %>
        </p>

        <br/>
        <p>
          <%= submit_tag "Update", class: "btn btn-primary" %>
        </p>

        <% end %>
    </div>
  </div>
</div>
